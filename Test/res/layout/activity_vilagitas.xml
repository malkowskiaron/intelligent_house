<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:weightSum="6"
    tools:context=".Vilagitas" >

    <Switch
        android:id="@+id/haloszoba"
        style="@style/Kiemelt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_weight="1"
        android:text="@string/szoba_haloszoba" />

    <Switch
        android:id="@+id/konyha"
        style="@style/Kiemelt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_weight="1"
        android:checked="false"
        android:text="@string/szoba_konyha" />

    <Switch
        android:id="@+id/eloszoba"
        style="@style/Kiemelt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_weight="1"
        android:text="@string/szoba_eloszoba" />

    <Switch
        android:id="@+id/gyerekszoba"
        style="@style/Kiemelt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_weight="1"
        android:text="@string/szoba_gyerekszoba" />

    <Switch
        android:id="@+id/furdoszoba"
        style="@style/Kiemelt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_weight="1"
        android:text="@string/szoba_furdoszoba" />

    <Switch
        android:id="@+id/nappali"
        style="@style/Kiemelt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_weight="1"
        android:text="@string/szoba_nappali" />

</LinearLayout>